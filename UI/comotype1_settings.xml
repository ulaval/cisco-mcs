<Extensions>
  <Version>1.11</Version>
  <Panel>
    <Order>4</Order>
    <PanelId>comotype1_settings</PanelId>
    <Origin>local</Origin>
    <Location>HomeScreenAndCallControls</Location>
    <Icon>Sliders</Icon>
    <Color>#C233C4</Color>
    <Name>Paramètres</Name>
    <ActivityType>Custom</ActivityType>
    <Page>
      <Name>Général</Name>
      <Row>
        <Name>Emplacement du présentateur</Name>
        <Widget>
          <WidgetId>comotype1|SS$PresenterLocation</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>local</Key>
              <Name>En présence</Name>
            </Value>
            <Value>
              <Key>remote</Key>
              <Name>À distance</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Surface d'écriture</Name>
        <Widget>
          <WidgetId>comotype1|SS$ClearPresentationZone</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4;columns=2</Options>
          <ValueSpace>
            <Value>
              <Key>off</Key>
              <Name>Permettre la présentation</Name>
            </Value>
            <Value>
              <Key>on</Key>
              <Name>Dégager la surface</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Câdrer la caméra automatiquement</Name>
        <Widget>
          <WidgetId>comotype1|SS$UsePresenterTrack</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Avertissements câdrage auto.</Name>
        <Widget>
          <WidgetId>comotype1|SS$PresenterTrackWarnings</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Microphone</Name>
      <Row>
        <Name>Microphones auditoire en présence</Name>
        <Widget>
          <WidgetId>comotype1|SS$AudienceMics</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Microphone casque</Name>
        <Widget>
          <WidgetId>comotype1|audioinput.presenter.sf1:LEVELGROUP</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>off</Key>
              <Name>Muet</Name>
            </Value>
            <Value>
              <Key>low</Key>
              <Name>Normal</Name>
            </Value>
            <Value>
              <Key>medium</Key>
              <Name>Fort</Name>
            </Value>
            <Value>
              <Key>high</Key>
              <Name>Très fort</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Microphone baton</Name>
        <Widget>
          <WidgetId>comotype1|audioinput.presenter.bat1:LEVELGROUP</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4;columns=4</Options>
          <ValueSpace>
            <Value>
              <Key>off</Key>
              <Name>Muet</Name>
            </Value>
            <Value>
              <Key>low</Key>
              <Name>Normal</Name>
            </Value>
            <Value>
              <Key>medium</Key>
              <Name>Fort</Name>
            </Value>
            <Value>
              <Key>high</Key>
              <Name>Très fort</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Éclairage</Name>
      <Row>
        <Name>Éclairage automatique</Name>
        <Widget>
          <WidgetId>comotype1|SS$AutoLights</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Scènes d'éclairage</Name>
        <Widget>
          <WidgetId>ACTIONS$LIGHTSCENE:lightscene.100%</WidgetId>
          <Name>Clair</Name>
          <Type>Button</Type>
          <Options>size=2</Options>
        </Widget>
        <Widget>
          <WidgetId>ACTIONS$LIGHTSCENE:lightscene.50%</WidgetId>
          <Name>Tamisé</Name>
          <Type>Button</Type>
          <Options>size=2</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Zone de présentation</Name>
        <Widget>
          <WidgetId>comotype1|light.presenter:LEVEL</WidgetId>
          <Type>Slider</Type>
          <Options>size=3</Options>
